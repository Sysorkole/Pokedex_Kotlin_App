<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Pokedex" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pokemon_red</item>
        <item name="colorPrimaryVariant">@color/pokemon_red</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="android:fontFamily">@font/pokemon_solid</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pokemon_red</item>
        <item name="colorSecondaryVariant">@color/pokemon_white</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:textColor">@color/pokemon_white</item>
        <item name="android:titleTextColor">@color/pokemon_white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

</resources>